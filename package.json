{
  "name": "vump",
  "description": "CLI tool to bump your CHANGES.md, following semver",
  "version": "0.2.2",
  "author": "Hayato Tomoda @tomodian",
  "bin": {
    "vump": "./bin/run"
  },
  "bugs": "https://github.com/tomodian/vump/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "cli-ux": "^5.3.2",
    "fast-glob": "^3.1.0",
    "semver": "^6.3.0",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/chai": "^4",
    "@types/jest": "^24.0.18",
    "@types/node": "^10",
    "@types/semver": "^6.0.2",
    "globby": "^10.0.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8",
    "tslint": "^5",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/tomodian/vump",
  "keywords": [
    "oclif",
    "semver",
    "changes"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "vump",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "tomodian/vump",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "pretty": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.+(ts|js)"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 200
  }
}
